<article>
    <div class="container mainProfile" id="mainProfile_all" tabindex="-1">
      <section class="mainProfile_1">
        <span>
          <!--메인프로필_1 사진-->
          <img class="mainProfile_img span" src="images/profile.png" alt="">
          <!--메인프로필_1 수정-->
          <i class="fa fa-pencil" aria-hidden="true"></i>
          </span>
        </span>
      </section>
      <section class="mainProfile_2">
          <!--메인프로필 2 자기소개-->
          <div class="mainProfile_intro">
            자기소개입니다.
          </div>
          <div class="mainProfile_hashtag_all">
            <span class="mainProfile_hashtag">
              #hashtag1
            </span>
          </div>
        <div class="mainProfile_3">
          <!--메인프로필 3 성취도-->
          <table class="mainProfile_goal-table">
              <tr>
                <th>
                  <svg width="16" height="150">
                    <rect width="16" height= <%= 100 %> style="fill:#4286f4;"/>
                  </svg>
                </th>
              </tr>
          </table>
          <!--메인프로필 3 리스트-->
          <table class="mainProfile_mylist">
            <tr>
              <td colspan="3" class="mainProfile_mylist">올해의 주요목표</td>
            </tr>
              
            <% @mylist.each do |m| %>
                <!--mylist 달성여부-->
              <tr>  
                <% if m.complete==true %>
                <% puts %>
                  <td><i class="mainProfile_mylist fa fa-check-square-o" aria-hidden="true"></i></td>
                  <td colspan="2" class="list"><a href="/write"><%= m.goal %> </a></td>
                  </td>
                <%else puts%>
                  <td><i class="mainProfile_mylist fa fa-square-o" aria-hidden="true"></i></td>
                  <td colspan="2" class="list"><a href="/write"><%= m.goal %> </a></td>
                <% end %>
              </tr>      
            <% end %>
          </table>
        </div>
          
        </span>
      </section>
    </div>
  </article>
</body> 

